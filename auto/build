#!/bin/bash
set -euo pipefail

cd "$(dirname "$0")/.."

echo "-------------------- üê≥ Build Docker Images --------------------"

if [[ $# -ne 2 ]]; then
  echo "Usage: $0 <DOCKER_USER> <VERSION>"
  exit 1
fi

DOCKER_USER=$1
VERSION=$2

auto/build-frontend-dev
auto/build-frontend-artifacts

PLATFORMS="linux/amd64,linux/arm64"

docker build --platform $PLATFORMS -f ./backend/Dockerfile.dev -t $DOCKER_USER/forum-backend:$VERSION ./backend &
docker build --platform $PLATFORMS -f ./nginx/Dockerfile.dev -t $DOCKER_USER/forum-nginx:$VERSION . &
docker build --platform $PLATFORMS -f ./db/mongo/Dockerfile.dev -t $DOCKER_USER/forum-mongodb:$VERSION ./db/mongo &

wait
