#!/bin/bash
set -euo pipefail

cd "$(dirname "$0")/.."

pr_body="$1"

labels=$(echo "$pr_body" | grep -iE '/kind [a-zA-Z0-9_-]+' \
  | sed -E 's@.*/kind[[:space:]]+([a-zA-Z0-9_-]+).*@kind/\1@' \
  | sort -u | tr -d '\r')

if [[ -n "$labels" ]]; then
  echo "labels=$(echo "$labels" | paste -sd "," -)" >> "$GITHUB_OUTPUT"
else
  echo "labels=" >> "$GITHUB_OUTPUT"
fi
